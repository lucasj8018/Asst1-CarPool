@model CarPoolLibrary.Models.UserWithRole

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var role in Model.Roles)
            {
                <div>@role</div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User!.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User!.UserName)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.User!.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <p class="my-4"><a asp-action="Index">Back to List</a></p>
    </form>
</div>
