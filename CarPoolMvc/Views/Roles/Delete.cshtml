@model CarPoolLibrary.Models.UserWithRole

@{
    ViewData["Title"] = "Delete Role";
}

<link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @foreach (var role in Model.Roles)
            {
                <div>@role</div>
            }
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.User!.UserName) *@
            User Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User!.UserName)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.User!.Id" method="post">
        <component type="typeof(RolesButtonsDeleteAndCancel)" render-mode="ServerPrerendered" />
    </form>
</div>
