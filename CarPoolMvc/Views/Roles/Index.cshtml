@model IEnumerable<CarPoolLibrary.Models.UserWithRole>

@{
    ViewData["Title"] = "Role Management";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Roles</th>
            <th>E-mail</th>
            @* <th>Last Name</th> *@
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @string.Join(", ", item.Roles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User!.Email)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td> *@
                <td>
                    @if (item.User != null)
                    {
                        <a asp-action="Edit" asp-route-id="@item.User.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.User.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.User.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
