@model CarPoolLibrary.Models.UserWithRole

@{
    ViewData["Title"] = "Edit Role for Member:";
}

<link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Roles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User!.Id" />
            <div class="form-group my-4">
                <label asp-for="User!.Email" class="control-label">User</label>
                <input asp-for="User!.Email" class="form-control" readonly/>
                <span asp-validation-for="User!.Email" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <label asp-for="Roles" class="control-label"></label>
                <select asp-for="Roles" class="form-control">
                    <option value="Admin">Admin</option>
                    <option value="Owner">Owner</option>
                    <option value="Passenger">Passenger</option>
                </select>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                <component type="typeof(RolesButtonsSaveAndCancel)" render-mode="ServerPrerendered" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
