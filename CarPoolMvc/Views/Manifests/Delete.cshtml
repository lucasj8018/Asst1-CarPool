@model CarPoolLibrary.Models.Manifest

@{
    ViewData["Title"] = "Delete Manifest?";
}

<link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">

<h1>@ViewData["Title"]</h1>

<div class="my-4">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManifestId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManifestId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TripId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TripId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Member!.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ManifestId" />
        <input type="hidden" asp-for="MemberId" />
        <component type="typeof(ManifestsButtonsDeleteAndCancel)" render-mode="ServerPrerendered" />
    </form>
</div>
